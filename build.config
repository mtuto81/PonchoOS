# PonchoOS Build Pipeline Configuration

# Build settings
BUILD_OUTPUT_DIR = bin
VERBOSE_BUILD = false
OPTIMIZATION_LEVEL = -O2

# QEMU Settings
QEMU_CPU = qemu64
QEMU_MEMORY = 256M
QEMU_MACHINE = q35
QEMU_NET = none

# Debug settings
ENABLE_DEBUG = false
DEBUG_INT = false
DEBUG_NO_REBOOT = false
DEBUG_SERIAL = stdio

# Bootloader
ENABLE_EFI = true
FIRMWARE_CODE = OVMF_CODE-pure-efi.fd
FIRMWARE_VARS = OVMF_VARS-pure-efi.fd

# Image format (fat or iso)
IMAGE_FORMAT = fat

# Filesystem
IMAGE_SIZE_KB = 48000
FILESYSTEM_TYPE = FAT12
